<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/purple"
    tools:context=".Image_Selected_Fragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clSelectImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/imageSelected"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:src="@drawable/photoshop"
            android:layout_marginBottom="300dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/DesTxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/app_name"
            android:layout_margin="30dp"
            android:textSize="20sp"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/imageSelected"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <ImageView
            android:id="@+id/Star"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_estrella_vacia"
            android:layout_marginTop="80dp"
            app:layout_constraintTop_toBottomOf="@id/DesTxt"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>